<Window x:Class="my_tunes.RenameConfirmation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:my_tunes"
        mc:Ignorable="d"
        Title="Rename Playlist" Height="232" Width="304">
    <Grid>
        <Label Margin="10,71,162,97">New Playlist Name:</Label>
        <TextBox x:Name="newNameTextBox" SelectionChanged="newNameTextBox_SelectionChanged" Margin="135,71,10,97"/>
        <Button x:Name="okButton" IsDefault="True" Click="okButton_Click" Margin="76,154,152,17">OK</Button>
        <Button x:Name="cancelButton" IsCancel="True" Click="cancelButton_Click" Margin="157,154,71,17">Cancel</Button>
    </Grid>
</Window>
